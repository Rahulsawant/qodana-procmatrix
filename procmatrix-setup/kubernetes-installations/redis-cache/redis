
Pull the Redis Docker Image:
docker pull redis:latest


helm install my-redis bitnami/redis --namespace default -f custom-values.yaml
Port forward:
kubectl port-forward -n default svc/my-redis 6379:6379


# get redis password
PASSWORD=$(kubectl get secret --namespace default my-redis -o jsonpath="{.data.redis-password}" | base64 --decode)
echo $PASSWORD
-> 36l3C2fRue

// pm install -g redis-cli

redis-cli -h localhost -p 36l3C2fRue
SET mykey "Hello"
GET mykey

